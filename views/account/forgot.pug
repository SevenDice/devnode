extends ./account-layout

block content
  .container
    // Outer Row 
    .row.justify-content-center
      .col-xl-10.col-lg-12.col-md-9
        .card.o-hidden.border-0.shadow-lg.my-5
          .card-body.p-0
            // Nested Row within Card Body 
            .row
              .col-lg-6.d-none.d-lg-block.bg-password-image
              .col-lg-6
                .p-5
                  .text-center
                    h1.h4.text-gray-900.mb-2 Forgot Your Password?
                    p.mb-4 We get it, stuff happens. Just enter your email address below and we'll send you a link to reset your password!
                  form.user(method='POST')
                    input(type='hidden', name='_csrf', value=_csrf)
                    .form-group
                      input.form-control.form-control-user(type='email', name='email', id='email', placeholder='Enter Email Address...', autofocus, autocomplete='email', required)
                    button.btn.btn-primary.btn-user.btn-block(type='submit') Reset Password
                  hr
                  include ../partials/flash
                  hr
                  .text-center
                    a.small(href='/signup') Create an Account!
                  .text-center
                    a.small(href='/login') Already have an account? Login!