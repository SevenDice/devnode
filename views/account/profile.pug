extends ../layout

block content
  // Begin Page Content 
  .container-fluid
    // Page Heading 
    h1.h3.mb-4.text-gray-800.text-center Profile Settings
    .container.py-3
      .row
        .mx-auto.col-sm-8
          // form user info 
          .card
            .card-header
              h4.mb-0 Profile Information
            .card-body
              form.form(action='/account/profile', method='POST')
                input(type='hidden', name='_csrf', value=_csrf)
                .form-group.row
                  label.col-lg-3.col-form-label.form-control-label Name
                  .col-lg-9
                    input.form-control(type='text', name='name', id='name', value=user.profile.name, autocomplete='name')
                .form-group.row
                  label.col-lg-3.col-form-label.form-control-label Email
                  .col-lg-9
                    input.form-control(type='email', name='email', id='email', value=user.email, autocomplete='email')
                .form-group.row
                  label.col-lg-3.col-form-label.form-control-label Location
                  .col-lg-9
                    input.form-control(type='text', name='location', id='location', value=user.profile.location, autocomplete)
                .form-group.row
                  label.col-lg-3.col-form-label.form-control-label Website
                  .col-lg-9
                    input.form-control(type='text', name='website', id='website', value=user.profile.website, autocomplete='url')
                .form-group.row
                  label.col-lg-3.col-form-label.form-control-label Gravatar
                  .col-lg-9
                    img.profile(src=user.gravatar(), class='profile', width='100', height='100')
                button.btn.btn-primary.btn-user(type='submit') Update Profile
          br
          .card
            .card-header
              h4.mb-0 Change Password
            .card-body
              form.form(action='/account/password', method='POST')
                input(type='hidden', name='_csrf', value=_csrf)
                .form-group.row
                  label.col-lg-3.col-form-label.form-control-label(for='password') New Password
                  .col-lg-9
                    input.form-control(type='password', name='password', id='password', autocomplete='new-password')
                .form-group.row
                  label.col-lg-3.col-form-label.form-control-label(for='confirmPassword')  Confirm Password
                  .col-lg-9
                    input.form-control(type='password', name='confirmPassword', id='confirmPassword', autocomplete='new-password')
                button.btn.btn-primary.btn-user(type='submit') Change Password
          br
          .card
            .card-header
              h4.mb-0 Delete Account
            .card-body
              form.form(action='/account/delete', method='POST', onsubmit="return confirm('Are you sure you want to delete your account?');")
                p You can delete account, but keep in mind this action is irreversible
                  hr
                  button.btn.btn-danger.btn-user(type='submit') Delete Account
          br
          .card
            .card-header
              h4.mb-0 Linked Accounts
            .card-body
              .offset-sm-3.col-md-7.pl-2
                if user.google
                  p.mb-1: a.text-danger(href='/account/unlink/google') Unlink your Google account
                else
                  p.mb-1: a(href='/auth/google') Link your Google account
              .offset-sm-3.col-md-7.pl-2
                if user.facebook
                  p.mb-1: a.text-danger(href='/account/unlink/facebook') Unlink your Facebook account
                else
                  p.mb-1: a(href='/auth/facebook') Link your Facebook account
              .offset-sm-3.col-md-7.pl-2
                if user.twitter
                  p.mb-1: a.text-danger(href='/account/unlink/twitter') Unlink your Twitter account
                else
                  p.mb-1: a(href='/auth/twitter') Link your Twitter account
              .offset-sm-3.col-md-7.pl-2
                if user.github
                  p.mb-1: a.text-danger(href='/account/unlink/github') Unlink your GitHub account
                else
                  p.mb-1: a(href='/auth/github') Link your GitHub account
              .offset-sm-3.col-md-7.pl-2
                if user.linkedin
                  p.mb-1: a.text-danger(href='/account/unlink/linkedin') Unlink your LinkedIn account
                else
                  p.mb-1: a(href='/auth/linkedin') Link your LinkedIn account
              .offset-sm-3.col-md-7.pl-2
  // /.container-fluid 
  // End of Main Content 